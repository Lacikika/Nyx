<!DOCTYPE html>
<html>
<head>
  <title>Escrowed Data Web Panel</title>
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Montserrat', Arial, sans-serif; background: #23272a; color: #eee; margin: 0; }
    header { background: #2c2f33; padding: 1.5em 2em; box-shadow: 0 2px 8px #0004; }
    h1 { color: #7289da; margin: 0; font-size: 2.2em; letter-spacing: 2px; }
    .nav { margin: 1em 0 2em 0; }
    .nav a { color: #43b581; margin-right: 1.5em; font-weight: bold; text-decoration: none; letter-spacing: 1px; }
    .nav a:hover { text-decoration: underline; }
    .container { max-width: 900px; margin: 2em auto; background: #2c2f33; border-radius: 12px; box-shadow: 0 4px 24px #0006; padding: 2em; }
    .searchbar { margin-bottom: 2em; display: flex; gap: 0.5em; }
    input[type="text"] { padding: 0.7em; border-radius: 6px; border: none; width: 300px; font-size: 1em; }
    button { padding: 0.7em 1.5em; border-radius: 6px; border: none; background: #7289da; color: #fff; font-weight: bold; font-size: 1em; cursor: pointer; transition: background 0.2s; }
    button:hover { background: #5865f2; }
    .section { margin-bottom: 2.5em; }
    h2 { color: #43b581; margin-bottom: 0.5em; }
    ul { list-style: none; padding: 0; }
    li { margin: 0.3em 0; }
    li a { color: #eee; background: #36393f; padding: 0.5em 1em; border-radius: 6px; display: inline-block; transition: background 0.2s, color 0.2s; }
    li a:hover { background: #43b581; color: #23272a; }
    @media (max-width: 600px) { .container { padding: 1em; } input[type="text"] { width: 100%; } }
  </style>
</head>
<body>
  <header>
    <h1>Escrowed Data Web Panel</h1>
    <div class="nav">
      <a href="/">Főoldal</a>
      <a href="/statistics">Statisztika</a>
      <a href="/blank">Blank Page</a>
    </div>
  </header>
  <div class="container">
    <form class="searchbar" action="/search" method="get">
      <input type="text" name="q" placeholder="Keresés fájlnév vagy ID alapján..." required />
      <button type="submit">Keresés</button>
    </form>
    <div class="section">
      <h2>Guild Logs</h2>
      <ul>
        <% logs.forEach(function(file) { %>
          <li><a href="/data/logs/<%= file %>"><%= file %></a></li>
        <% }); %>
      </ul>
    </div>
    <div class="section">
      <h2>User Profiles</h2>
      <ul>
        <% profiles.forEach(function(file) { %>
          <li><a href="/data/profiles/<%= file %>"><%= file %></a></li>
        <% }); %>
      </ul>
    </div>
    <div class="section">
      <h2>Guild Configs</h2>
      <ul>
        <% guilds.forEach(function(file) { %>
          <li><a href="/data/guilds/<%= file %>"><%= file %></a></li>
        <% }); %>
      </ul>
    </div>
  </div>
</body>
</html>
