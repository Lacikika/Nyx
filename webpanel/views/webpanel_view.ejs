<!DOCTYPE html>
<html>
<head>
  <title>View <%= file %> - <%= type %></title>
  <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body { 
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; 
      background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%); 
      color: #e2e8f0; 
      margin: 0; 
      min-height: 100vh;
    }
    
    header { 
      background: rgba(15, 15, 35, 0.95); 
      backdrop-filter: blur(20px);
      padding: 1.5rem 2rem; 
      box-shadow: 0 4px 32px rgba(0, 0, 0, 0.3);
      border-bottom: 1px solid rgba(114, 137, 218, 0.2);
      position: sticky;
      top: 0;
      z-index: 100;
    }
    
    h1 { 
      color: #e2e8f0; 
      margin: 0 0 1rem 0; 
      font-size: 2rem; 
      font-weight: 700;
      letter-spacing: -0.025em;
      background: linear-gradient(135deg, #7c3aed, #3b82f6);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }
    
    .nav { 
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }
    
    .nav a { 
      color: #94a3b8;
      background: rgba(30, 41, 59, 0.5);
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 500;
      font-size: 0.875rem;
      transition: all 0.2s ease;
      border: 1px solid rgba(148, 163, 184, 0.1);
    }
    .nav a:hover {
      color: #e2e8f0;
      background: rgba(124, 58, 237, 0.2);
      border-color: rgba(124, 58, 237, 0.3);
      transform: translateY(-1px);
    }
    
    .container { 
      max-width: 1200px; 
      margin: 2rem auto; 
      background: rgba(15, 15, 35, 0.6);
      backdrop-filter: blur(20px);
      border-radius: 1rem;
      border: 1px solid rgba(148, 163, 184, 0.1);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
      padding: 2rem;
    }
    
    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: #94a3b8;
      background: rgba(30, 41, 59, 0.5);
      padding: 0.75rem 1rem;
      border-radius: 0.5rem;
      text-decoration: none;
      font-weight: 500;
      font-size: 0.875rem;
      transition: all 0.2s ease;
      border: 1px solid rgba(148, 163, 184, 0.1);
      margin-bottom: 2rem;
    }
    
    .back-link:hover {
      color: #e2e8f0;
      background: rgba(124, 58, 237, 0.2);
      border-color: rgba(124, 58, 237, 0.3);
      transform: translateY(-1px);
    }
    .nav a:hover { text-decoration: underline; }
    
    pre { 
      background: rgba(15, 15, 35, 0.8); 
      padding: 1.5rem; 
      border-radius: 0.75rem; 
      overflow-x: auto; 
      font-size: 0.875rem; 
      color: #10b981;
      border: 1px solid rgba(148, 163, 184, 0.1);
      font-family: 'JetBrains Mono', 'Fira Code', Consolas, monospace;
      line-height: 1.6;
    }
    
    table {
      width: 100%;
      border-collapse: collapse;
      background: rgba(15, 15, 35, 0.8);
      color: #e2e8f0;
      border-radius: 0.75rem;
      overflow: hidden;
      border: 1px solid rgba(148, 163, 184, 0.1);
      margin-top: 1rem;
    }
    
    thead tr {
      background: rgba(30, 41, 59, 0.8);
    }
    
    th {
      padding: 1rem 0.75rem;
      font-weight: 600;
      font-size: 0.875rem;
      text-align: left;
      border-bottom: 1px solid rgba(148, 163, 184, 0.2);
      color: #cbd5e1;
    }
    
    td {
      padding: 0.75rem;
      border-bottom: 1px solid rgba(148, 163, 184, 0.1);
      font-size: 0.875rem;
      vertical-align: top;
    }
    
    tbody tr:hover {
      background: rgba(30, 41, 59, 0.3);
    }
    
    details {
      cursor: pointer;
    }
    
    summary {
      color: #10b981;
      font-weight: 500;
      padding: 0.25rem 0;
    }
    
    summary:hover {
      color: #34d399;
    }
    
    details pre {
      margin: 0.5rem 0 0 0;
      background: rgba(15, 15, 35, 0.6);
      font-size: 0.8rem;
      padding: 1rem;
      border-radius: 0.5rem;
    }
    
    @media (max-width: 768px) {
      .container {
        margin: 1rem;
        padding: 1rem;
      }
      
      header {
        padding: 1rem;
      }
      
      h1 {
        font-size: 1.5rem;
      }
      
      .nav {
        flex-direction: column;
        gap: 0.5rem;
      }
      
      table {
        font-size: 0.75rem;
      }
      
      th, td {
        padding: 0.5rem 0.25rem;
      }
    }
  </style>
</head>
<body>
  <header>
    <h1>Viewing <%= type %>/<%= file %></h1>
    <div class="nav">
      <a href="/">Főoldal</a>
      <a href="/statistics">Statisztika</a>
      <a href="/blank">Blank Page</a>
      <a href="/console">Console</a>
    </div>
  </header>
  <div class="container">
    <a href="/" class="back-link">
      <span>←</span>
      Vissza a főoldalra
    </a>
    
    <% if (json.entries && Array.isArray(json.entries) && json.entries.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Time</th>
            <th>Username</th>
            <th>User ID</th>
            <th>Guild ID</th>
            <th>Role</th>
            <th>Action/Data</th>
          </tr>
        </thead>
        <tbody>
        <% json.entries.forEach(function(entry) { %>
          <tr>
            <td style="white-space:nowrap;">
              <%= entry.time || entry.timestamp || '' %>
            </td>
            <td><%= entry.username || '' %></td>
            <td><%= entry.userId || '' %></td>
            <td><%= entry.guildId || '' %></td>
            <td><%= entry.role || '' %></td>
            <td style="max-width:400px;overflow-x:auto;">
              <% const mainFields = ['time','timestamp','username','userId','guildId','role']; %>
              <% const extra = Object.keys(entry).filter(k => !mainFields.includes(k)).reduce((obj, k) => { obj[k] = entry[k]; return obj; }, {}); %>
              <% if (Object.keys(extra).length > 0) { %>
                <details>
                  <summary>Részletek / Details</summary>
                  <pre style="white-space:pre-wrap;word-break:break-all;"><%= JSON.stringify(extra, null, 2) %></pre>
                </details>
              <% } else { %>
                <span style="color:#64748b;">(No extra data)</span>
              <% } %>
            </td>
          </tr>
        <% }); %>
        </tbody>
      </table>
    <% } else { %>
      <pre><%= JSON.stringify(json, null, 2) %></pre>
    <% } %>
  </div>
</body>
</html>